@{
    var title = ViewBag.Title ?? "Municipal Services";
    var currentController = (ViewContext.RouteData.Values["controller"] ?? "").ToString();
    var currentAction = (ViewContext.RouteData.Values["action"] ?? "").ToString();
    Func<string, string, string> isActive = (c, a) =>
        (string.Equals(currentController, c, System.StringComparison.OrdinalIgnoreCase) &&
         string.Equals(currentAction, a, System.StringComparison.OrdinalIgnoreCase))
        ? "active" : "";
    Func<string, string, string> ariaCurrent = (c, a) =>
        (string.Equals(currentController, c, System.StringComparison.OrdinalIgnoreCase) &&
         string.Equals(currentAction, a, System.StringComparison.OrdinalIgnoreCase))
        ? "aria-current=\"page\"" : "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Municipal Services</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <!-- Skip link for keyboard users -->
    <a class="skip-link" href="#mainContent">Skip to main content</a>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient navbar-shadow fixed-top" role="navigation" aria-label="Primary">
        <div class="container">
            <a class="navbar-brand" href='@Url.Action("Index", "Home")'>
                <i class="fa-solid fa-landmark"></i> Municipal Services
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @isActive("Home", "Index")"
                           href='@Url.Action("Index", "Home")' @Html.Raw(ariaCurrent("Home", "Index"))>
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @isActive("Report", "Create")"
                           href='@Url.Action("Create", "Report")' @Html.Raw(ariaCurrent("Report", "Create"))>
                            Report Issues
                        </a>
                    </li>

                    
                    <li class="nav-item">
                        <a class="nav-link @isActive("Event", "Load")"
                           href='@Url.Action("Load", "Event")' @Html.Raw(ariaCurrent("Event", "Load"))>
                            Local Events & Announcements
                        </a>
                    </li>
                    <!-- Coming soon item (disabled, non-focusable) -->
                    <li class="nav-item">
                        <span class="nav-link disabled opacity-75" aria-disabled="true" tabindex="-1">
                            Service Status (coming soon)
                        </span>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @isActive("Home", "About")"
                           href='@Url.Action("About", "Home")' @Html.Raw(ariaCurrent("Home", "About"))>
                            About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @isActive("Home", "Privacy")"
                           href='@Url.Action("Privacy", "Home")' @Html.Raw(ariaCurrent("Home", "Privacy"))>
                            Privacy
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <main id="mainContent" class="container body-content" role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-3" role="alert" aria-live="polite">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3" role="alert" aria-live="assertive">@TempData["Error"]</div>
        }

        @RenderBody()
        <hr />
    </main>

    <!-- FOOTER -->
    <footer class="site-footer gradient" role="contentinfo">
        <div class="container py-4">
            <div class="row gy-3">
                <div class="col-md-4">
                    <h4>About</h4>
                    <p>This platform helps residents report issues, track services, and engage with local initiatives.</p>
                    <p><a class="btn btn-link p-0" href="@Url.Action("About", "Home")">Learn more →</a></p>
                </div>
                <div class="col-md-4">
                    <h4>Quick Links</h4>
                    <ul class="list-unstyled footer-links" aria-label="Footer quick links">
                        <li><a href="@Url.Action("Create", "Report")"><i class="fa-solid fa-circle-exclamation"></i> Report Issues</a></li>
                        <li><a href="@Url.Action("Load", "Event")"><i class="fa-solid fa-circle-exclamation"></i>  Local Events & Announcements </a></li>
                        <li class="text-muted"><i class="fa-regular fa-rectangle-list"></i> Service Request Status (coming soon)</li>
                        <li><a href="@Url.Action("Privacy", "Home")"><i class="fa-regular fa-file-lines"></i> Privacy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Connect</h4>
                    <p>Follow us for updates:</p>
                    <p class="socials" aria-label="Municipality social media">
                        <a href="#" aria-label="Facebook"><i class="fa-brands fa-facebook fa-lg"></i></a>
                        <a href="#" aria-label="X (Twitter)"><i class="fa-brands fa-x-twitter fa-lg"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fa-brands fa-instagram fa-lg"></i></a>
                        <a href="#" aria-label="YouTube"><i class="fa-brands fa-youtube fa-lg"></i></a>
                    </p>
                    <p class="small mb-0">Need help? <a href="mailto:support@municipality.gov">support@municipality.gov</a></p>
                </div>
            </div>
            <div class="text-center small mt-3">© @DateTime.UtcNow.Year Municipality • All rights reserved</div>
        </div>
    </footer>

    <!-- JS (Bootstrap Bundle includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (optional, if you use it for forms/validation) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

